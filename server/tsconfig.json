{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2021",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "../dist/server",
    "types": ["node", "mocha"],
    "baseUrl": ".",
    "paths": {
      "@interfaces": ["src/interfaces"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"]
}
